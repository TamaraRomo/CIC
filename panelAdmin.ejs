                        <td >Folio</td>
                        <td>Nombre</td>
                        <td>Equipo</td>
                        <td id="bordeDer">Estatus</td>
                        <td>Folio</td>
                        <td>Nombre</td>
                        <td>Equipo</td>
                    </tr>
                    <tr class="table-light">
