                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td id="bordeDerechoVacio"></td>
                                <% } %>
                
                                <!-- Pendiente -->
                                <% if (i < pendiente.length) { %>
                                    <td class="bg-warning"><%= pendiente[i].FolioSolicitud %></td>
                                    <td class="bg-warning"><%= pendiente[i].Nombre %></td>
                                    <td class="bg-warning"><%= pendiente[i].Equipo %></td>
